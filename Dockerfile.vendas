# Etapa 1: Base - Imagem de runtime do ASP.NET
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080

# Etapa 2: Build - Imagem com o SDK completo para compilar e publicar a aplicação
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["src/Vendas.API/Vendas.Api.csproj", "src/Vendas.API/"]
COPY ["src/Messaging.Contracts/Messaging.Contracts.csproj", "src/Messaging.Contracts/"]
COPY ["src/Messaging.Infra/Messaging.Infra.csproj", "src/Messaging.Infra/"]
RUN dotnet restore "src/Vendas.API/Vendas.Api.csproj"
COPY . .
RUN dotnet publish "src/Vendas.API/Vendas.Api.csproj" -c Release -o /app/publish

# Etapa 3: Final - Imagem final, menor e otimizada
FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "Vendas.Api.dll"]